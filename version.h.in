#ifndef VERSION_H
#define	VERSION_H

#define libmelter_VERSION_MAJOR @libmelter_VERSION_MAJOR@
#define libmelter_VERSION_MINOR @libmelter_VERSION_MINOR@

#include <string>
#include <sstream>

std::string version() {
	std::ostringstream os;
	os << libmelter_VERSION_MAJOR << "." << libmelter_VERSION_MINOR;
	return os.str();
}

#endif	/* VERSION_H */

